{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "minItems": 1,
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "deviceName": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "marketingName": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "manufacturer": {
        "type": "string"
      },
      "brand": {
        "type": "string"
      },
      "display": {
        "type": "object",
        "properties": {
          "width": {
            "anyOf": [
              {
                "type": "integer",
                "minimum": 0
              },
              {
                "type": "null"
              }
            ]
          },
          "height": {
            "anyOf": [
              {
                "type": "integer",
                "minimum": 0
              },
              {
                "type": "null"
              }
            ]
          },
          "touch": {
            "anyOf": [
              {
                "type": "boolean"
              },
              {
                "type": "null"
              }
            ]
          },
          "size": {
            "anyOf": [
              {
                "type": "number",
                "minimum": 0
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": [
          "width",
          "height",
          "touch",
          "size"
        ]
      },
      "dualOrientation": {
        "type": "boolean"
      },
      "type": {
        "type": "string"
      },
      "simCount": {
        "type": "integer",
        "minimum": 0,
        "multipleOf": 1
      },
      "market": {
        "type": "object",
        "properties": {
          "regions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "countries": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "vendors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "regions",
          "countries",
          "vendors"
        ]
      }
    },
    "required": [
      "deviceName",
      "marketingName",
      "manufacturer",
      "brand",
      "display",
      "dualOrientation",
      "type",
      "simCount",
      "market"
    ]
  }
}
