{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "minItems": 1,
  "uniqueItems": true,
  "items": {
    "type": "object",
    "properties": {
      "deviceName": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "marketingName": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "null"
          }
        ]
      },
      "manufacturer": {
        "type": "string"
      },
      "brand": {
        "type": "string"
      },
      "display": {
        "type": "object",
        "properties": {
          "width": {
            "anyOf": [
              {
                "type": "integer",
                "minimum": 0
              },
              {
                "type": "null"
              }
            ]
          },
          "height": {
            "anyOf": [
              {
                "type": "integer",
                "minimum": 0
              },
              {
                "type": "null"
              }
            ]
          },
          "touch": {
            "anyOf": [
              {
                "type": "boolean"
              },
              {
                "type": "null"
              }
            ]
          },
          "size": {
            "anyOf": [
              {
                "type": "number",
                "minimum": 0
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": [
          "width",
          "height",
          "touch",
          "size"
        ]
      },
      "type": {
        "type": "string"
      }
    },
    "required": [
      "deviceName",
      "marketingName",
      "manufacturer",
      "brand",
      "display",
      "type"
    ]
  }
}
